---
import { businessInfo, getPhoneLink } from "../data/business.js";

interface Props {
    title?: string;
    subtitle?: string;
}

const {
    title = "Ready to Get Started?",
    subtitle = "Contact us today for a free estimate. No hidden fees, just honest work at a fair price.",
} = Astro.props;
---

<section class="cta-section section">
    <div class="container">
        <h2>{title}</h2>
        <p>{subtitle}</p>

        <a href={getPhoneLink()} class="cta__phone">
