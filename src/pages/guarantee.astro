---
import BaseLayout from "../layouts/BaseLayout.astro";
import CTASection from "../components/CTASection.astro";
---

<BaseLayout
    title="Our Guarantee"
    description="100% Satisfaction Guarantee. If you're not happy with our work, we'll make it right or refund your money. No questions asked."
    canonical="/guarantee/"
>
    <!-- Page Header -->
    <section class="page-header">
        <div class="container">
            <nav class="breadcrumb">
                <a href="/">Home</a>
                <span>/</span>
                <span>Our Guarantee</span>
            </nav>
            <h1>100% Satisfaction Guarantee</h1>
            <p>Your peace of mind is our priority</p>
        </div>
    </section>

    <!-- Guarantee Promise -->
    <section class="section section--lg">
        <div class="container">
            <div style="max-width: 800px; margin: 0 auto; text-align: center;">
                <div style="font-size: 4rem; margin-bottom: 1rem;">üõ°Ô∏è</div>
                <h2 style="font-size: 2.5rem; margin-bottom: 1.5rem;">
                    We Stand Behind Our Work
                </h2>
                <p
                    style="font-size: 1.25rem; color: var(--color-gray-700); line-height: 1.8; margin-bottom: 2rem;"
                >
                    If you're not completely satisfied with our work, we'll make
                    it right ‚Äì or your money back. No questions asked. That's
                    our promise to you.
                </p>

                <div class="grid grid--3" style="margin-top: 3rem; gap: 2rem;">
                    <div>
                        <div style="font-size: 2.5rem; margin-bottom: 0.5rem;">
                            ‚úì
                        </div>
                        <h3 style="font-size: 1.125rem; margin-bottom: 0.5rem;">
                            Quality Work
                        </h3>
                        <p style="color: var(--color-gray-600); margin: 0;">
                            Done right the first time
                        </p>
                    </div>
                    <div>
                        <div style="font-size: 2.5rem; margin-bottom: 0.5rem;">
                            ‚úì
                        </div>
                        <h3 style="font-size: 1.125rem; margin-bottom: 0.5rem;">
                            On-Time Service
                        </h3>
                        <p style="color: var(--color-gray-600); margin: 0;">
                            We respect your schedule
                        </p>
                    </div>
                    <div>
                        <div style="font-size: 2.5rem; margin-bottom: 0.5rem;">
                            ‚úì
                        </div>
                        <h3 style="font-size: 1.125rem; margin-bottom: 0.5rem;">
                            Clean Workspace
                        </h3>
                        <p style="color: var(--color-gray-600); margin: 0;">
                            Leave it better than we found it
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Why Choose Mike Comparison -->
    <section class="section bg-gray">
        <div class="container">
            <h2 style="text-align: center; margin-bottom: 3rem;">
                Why Choose Mike's Handyman Services?
            </h2>

            <div style="overflow-x: auto;">
                <table class="comparison-table">
                    <thead>
                        <tr>
                            <th>Feature</th>
                            <th>Mike's Handyman</th>
                            <th>Other Services</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>Response Time</td>
                            <td class="highlight">Usually &lt;1 hour</td>
                            <td>24-48 hours</td>
                        </tr>
                        <tr>
                            <td>Background Check</td>
                            <td class="highlight">‚úì Always</td>
                            <td>Sometimes</td>
                        </tr>
                        <tr>
                            <td>Pricing</td>
                            <td class="highlight">Upfront & Clear</td>
                            <td>Hidden fees common</td>
                        </tr>
                        <tr>
                            <td>Weekend Availability</td>
                            <td class="highlight">‚úì Yes</td>
                            <td>Weekdays only</td>
                        </tr>
                        <tr>
                            <td>Same-Day Service</td>
                            <td class="highlight">‚úì Often available</td>
                            <td>Rarely</td>
                        </tr>
                        <tr>
                            <td>Satisfaction Guarantee</td>
                            <td class="highlight">100% Money-Back</td>
                            <td>Varies or none</td>
                        </tr>
                        <tr>
                            <td>Experience</td>
                            <td class="highlight">7+ Years</td>
                            <td>Varies</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </section>

    <!-- What's Covered -->
    <section class="section">
        <div class="container">
            <h2 style="text-align: center; margin-bottom: 3rem;">
                What's Covered
            </h2>

            <div
                class="grid grid--2"
                style="gap: 2rem; max-width: 900px; margin: 0 auto;"
            >
                <div class="card" style="padding: 2rem;">
                    <h3
                        style="color: var(--color-success); margin-bottom: 1rem;"
                    >
                        ‚úì Included in Guarantee
                    </h3>
                    <ul style="line-height: 2; color: var(--color-gray-700);">
                        <li>Quality of workmanship</li>
                        <li>Materials used (if provided by us)</li>
                        <li>Completing job as quoted</li>
                        <li>Clean workspace after completion</li>
                        <li>Punctuality and communication</li>
                        <li>Professional conduct</li>
                    </ul>
                </div>

                <div
                    class="card"
                    style="padding: 2rem; background: var(--color-gray-100);"
                >
                    <h3
                        style="color: var(--color-gray-600); margin-bottom: 1rem;"
                    >
                        Not Covered
                    </h3>
                    <ul style="line-height: 2; color: var(--color-gray-600);">
                        <li>Pre-existing damage or defects</li>
                        <li>Materials provided by customer</li>
                        <li>Normal wear and tear over time</li>
                        <li>Changes requested after completion</li>
                        <li>Issues beyond our control</li>
                    </ul>
                </div>
            </div>
        </div>
    </section>

    <!-- CTA Section -->
    <CTASection
        title="Ready for Risk-Free Service?"
        subtitle="Call now for a free quote. 100% satisfaction guaranteed."
    />
</BaseLayout>

<style>
    .comparison-table {
        width: 100%;
        border-collapse: collapse;
        background: white;
        border-radius: 0.75rem;
        overflow: hidden;
        box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
    }

    .comparison-table th {
        background: var(--color-primary);
        color: white;
        padding: 1rem;
        text-align: left;
        font-weight: 600;
    }

    .comparison-table td {
        padding: 1rem;
        border-bottom: 1px solid var(--color-gray-200);
    }

    .comparison-table tbody tr:last-child td {
        border-bottom: none;
    }

    .comparison-table tbody tr:hover {
        background: var(--color-gray-50);
    }

    .comparison-table .highlight {
        color: var(--color-success);
        font-weight: 600;
    }

    @media (max-width: 768px) {
        .comparison-table {
            font-size: 0.875rem;
        }

        .comparison-table th,
        .comparison-table td {
            padding: 0.75rem 0.5rem;
        }
    }
</style>
